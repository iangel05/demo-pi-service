{
    "env": {
        "node": true,
        "browser": true,
        "jest": true
    },
    "parser": "babel-eslint",
    "extends": ["airbnb", "prettier"],
    "plugins": ["prettier"],
    "rules": {
        "arrow-body-style": "off",
        "prettier/prettier": [
            "error",
            {
                "arrowParens": "always",
                "trailingComma": "es5",
                "singleQuote": true,
                "printWidth": 80
            }
        ]
    }
}
